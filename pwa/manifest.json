  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "test_files",
          "accept": ["application/json", "text/*", ".test", ".spec"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+semantest",
      "url": "/protocol?url=%s"
    }
  ]
