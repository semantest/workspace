{
  "name": "semantest-workspace",
  "version": "1.0.0",
  "description": "Semantest monorepo workspace with enhanced coding standards",
  "private": true,
  "workspaces": [
    "core",
    "browser",
    "chatgpt.com",
    "docs",
    "extension.chrome",
    "google.com",
    "images.google.com",
    "nodejs.server",
    "typescript.client",
    "video.google.com",
    "pinterest.com",
    "instagram.com",
    "unsplash.com",
    "twitter.com",
    "eslint-plugin-ddd"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:changed": "jest --onlyChanged --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint . --config .eslintrc.enhanced.json --ext .ts,.js",
    "lint:fix": "eslint . --config .eslintrc.enhanced.json --ext .ts,.js --fix",
    "lint:domain-boundaries": "eslint . --config .eslintrc.enhanced.json --ext .ts --rule '@semantest/ddd/domain-boundary-enforcement: error'",
    "type-check": "tsc --noEmit",
    "format": "prettier --write '**/*.{ts,js,json,md}'",
    "format:check": "prettier --check '**/*.{ts,js,json,md}'",
    "clean": "npm run clean --workspaces",
    "install:all": "npm install --workspaces",
    "audit": "npm audit --workspaces",
    "audit:fix": "npm audit fix --workspaces",
    "validate-commit-msg": "commitlint --edit",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "build:plugin": "cd eslint-plugin-ddd && npm run build",
    "test:plugin": "cd eslint-plugin-ddd && npm test",
    "quality-gates": "npm run lint && npm run type-check && npm run test:coverage && npm run format:check",
    "domain-check": "npm run lint:domain-boundaries && npm run type-check",
    "ci": "npm run quality-gates && npm run domain-check",
    "setup-standards": "npm run build:plugin && npm run prepare && npm run format",
    "validate-architecture": "npm run lint:domain-boundaries && npm run type-check"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --config .eslintrc.enhanced.json --fix",
      "prettier --write",
      "jest --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "**/domain/**/*.ts": [
      "eslint --config .eslintrc.enhanced.json --rule '@semantest/ddd/aggregate-root-validation: error' --rule '@semantest/ddd/value-object-immutability: error' --fix"
    ],
    "**/events/**/*.ts": [
      "eslint --config .eslintrc.enhanced.json --rule '@semantest/ddd/event-naming-convention: error' --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run quality-gates"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@semantest/eslint-plugin-ddd": "file:./eslint-plugin-ddd",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.5.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/semantest/semantest.git"
  },
  "license": "GPL-3.0",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "build",
          "ci",
          "chore",
          "revert",
          "arch"
        ]
      ],
      "scope-enum": [
        2,
        "always",
        [
          "core",
          "video.google.com",
          "pinterest.com",
          "instagram.com",
          "unsplash.com",
          "twitter.com",
          "images.google.com",
          "shared",
          "infrastructure",
          "domain",
          "application",
          "tests",
          "docs",
          "ci",
          "standards"
        ]
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/*/src", "<rootDir>/eslint-plugin-ddd/src"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "*/src/**/*.ts",
      "eslint-plugin-ddd/src/**/*.ts",
      "!**/*.d.ts",
      "!**/*.test.ts",
      "!**/*.spec.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapping": {
      "^@semantest/(.*)$": "<rootDir>/$1/src"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "quoteProps": "as-needed"
  }
}