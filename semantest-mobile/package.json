{
  "name": "semantest-mobile",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "pod-install": "cd ios && pod install",
    "clean": "watchman watch-del-all && rm -rf node_modules && npm install && cd ios && pod install && cd ..",
    "android:clean": "cd android && ./gradlew clean && cd ..",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace semantestMobile.xcworkspace -scheme semantestMobile -configuration Release"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.7",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "react-native-screens": "^3.29.0",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-reanimated": "^3.6.1",
    "react-native-vector-icons": "^10.0.3",
    "react-native-keychain": "^8.1.2",
    "react-native-biometrics": "^3.0.1",
    "react-native-push-notification": "^8.1.1",
    "@notifee/react-native": "^7.8.2",
    "react-native-background-fetch": "^4.2.1",
    "react-native-async-storage": "^1.21.0",
    "@tanstack/react-query": "^5.17.9",
    "zustand": "^4.4.7",
    "react-native-mmkv": "^2.11.0",
    "react-native-fs": "^2.20.0",
    "react-native-camera": "^4.2.1",
    "react-native-share": "^10.0.2",
    "react-native-device-info": "^10.12.0",
    "react-native-netinfo": "^11.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@types/react": "^18.2.45",
    "@types/react-native": "^0.72.8",
    "@types/react-native-push-notification": "^8.1.4",
    "@types/react-native-vector-icons": "^6.4.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}