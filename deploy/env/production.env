# Production Environment Configuration
NODE_ENV=production
LOG_LEVEL=warn

# Service URLs
WEBSOCKET_URL=https://api.semantest.com
WS_BASE_URL=wss://api.semantest.com

# Database (Use environment variables)
DB_CONNECTION_STRING=${DB_CONNECTION_STRING}
DB_POOL_MIN=10
DB_POOL_MAX=50

# Redis Cluster
REDIS_URL=${REDIS_URL}
REDIS_CLUSTER_MODE=true
REDIS_CLUSTER_NODES=${REDIS_CLUSTER_NODES}

# Security (Use environment variables)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=86400
CORS_ORIGIN=https://semantest.com,https://app.semantest.com
SECURE_COOKIES=true
COOKIE_SAME_SITE=strict

# Performance
MAX_CONNECTIONS=100000
CONNECTION_TIMEOUT=120000
WORKER_THREADS=8
CLUSTER_WORKERS=${CLUSTER_WORKERS:-auto}

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60000
TRACING_ENABLED=true
JAEGER_ENDPOINT=${JAEGER_ENDPOINT}
SENTRY_DSN=${SENTRY_DSN}

# Feature Flags
RATE_LIMITING_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60
AUTHENTICATION_REQUIRED=true
ENCRYPTION_AT_REST=true

# SSL/TLS
SSL_CERT_PATH=/certs/cert.pem
SSL_KEY_PATH=/certs/key.pem
SSL_CA_PATH=/certs/ca.pem

# High Availability
ENABLE_CLUSTERING=true
ENABLE_AUTO_SCALING=true
MIN_INSTANCES=3
MAX_INSTANCES=20

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600000
BACKUP_RETENTION_DAYS=30