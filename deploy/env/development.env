# Development Environment Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Service URLs
WEBSOCKET_URL=http://localhost:8080
WS_BASE_URL=ws://localhost:8080

# Database
DB_PATH=/app/data/semantest.db

# Redis
REDIS_URL=redis://development-password@redis:6379
REDIS_CLUSTER_MODE=false

# Security (Development - CHANGE FOR PRODUCTION!)
JWT_SECRET=dev-secret-change-in-production
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:4200
SECURE_COOKIES=false

# Performance
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30000
WORKER_THREADS=2

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=10000
TRACING_ENABLED=true

# Feature Flags
RATE_LIMITING_ENABLED=false
AUTHENTICATION_REQUIRED=false